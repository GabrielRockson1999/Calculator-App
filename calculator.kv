CalculatorLayout:

<Button>:
    font_size: 40
    color: 1, .3, 1, 1
    background_color: .152, .56, .255, 0.91

<CalculatorLayout>:
    id: calculator
    display: input

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        TextInput:
            id: input
            size_hint:1 , None
            readonly: True
            multiline: False
            font_size: 50

        GridLayout:
            cols: 4
            rows: 5

# This is for the first row
            Button:
                text: "1"
                on_press: input.text += self.text

            Button:
                text: "2"
                on_press: input.text += self.text

            Button:
                text: "3"
                on_press: input.text += self.text

            BubbleButton:
                text: "+"
                on_press: input.text += self.text

# This is for the second row

            Button:
                text: "4"
                on_press: input.text += self.text

            Button:
                text: "5"
                on_press: input.text += self.text

            Button:
                text: "6"
                on_press: input.text += self.text

            BubbleButton:
                text: "-"
                on_press: input.text += self.text

# This is for the third row of buttons

            Button:
                text: "7"
                on_press: input.text += self.text

            Button:
                text: "8"
                on_press: input.text += self.text

            Button:
                text: "9"
                on_press: input.text += self.text

            BubbleButton:
                text: "*"
                on_press: input.text += self.text


  # This is for the forth row of buttons

            BubbleButton:
                text: "C"
                on_press: input.text = ""

            Button:
                text: "0"
                on_press: input.text += self.text

            BubbleButton:
                text: "/"
                on_press: input.text += self.text

            BubbleButton:
                text: "="
                on_press: calculator.calculate(input.text)
